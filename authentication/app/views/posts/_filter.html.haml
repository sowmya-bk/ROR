-if @checkbox.include?('month')
  = @checkbox
  .month-filter
    %a{:href =>'#',:remote => true,:onclick => "filters('#{@date - 1.month}');" } <i class="fa fa-arrow-left" aria-hidden="true"></i>
    %label= datee.strftime("%B %Y")
    %a{:href =>'#',:remote => true,:onclick => "filters('#{datee + 1.month}');" } <i class="fa fa-arrow-right" aria-hidden="true"></i>
-if @checkbox.include?('week') 
  = @checkbox 
  .week-filter
    %a{:href =>'#',:remote => true,:onclick => "filters('#{datee - 7.day}');" } <i class="fa fa-arrow-left" aria-hidden="true"></i>
    %label= datee.beginning_of_week.strftime("%d %b,%Y")
    %label to
    %label= datee.end_of_week.strftime("%d %b,%Y") 
    %a{:href =>'#',:remote => true,:onclick => "filters('#{datee + 7.day}');" } <i class="fa fa-arrow-right" aria-hidden="true"></i>
