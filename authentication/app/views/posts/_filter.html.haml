- checkbox = selected_box
- date = presentdate
-if checkbox.include?('month')
  .month-filter
    %a{:href =>'#',"data-remote" => true,:onclick => "filters('#{date - 1.month}');" } <i class="fa fa-arrow-left" aria-hidden="true"></i>
    %label= date.strftime("%B %Y")
    %a{:href =>'#',"data-remote" => true,:onclick => "filters('#{date + 1.month}');" } <i class="fa fa-arrow-right" aria-hidden="true"></i>
-if checkbox.include?('week') 
  .week-filter
    %a{:href =>'#',"data-remote" => true,:onclick => "filters('#{date - 7.day}');" } <i class="fa fa-arrow-left" aria-hidden="true"></i>
    %label= date.beginning_of_week.strftime("%d %b,%Y")
    %label to
    %label= date.end_of_week.strftime("%d %b,%Y") 
    %a{:href =>'#',"data-remote" => true,:onclick => "filters('#{date + 7.day}');" } <i class="fa fa-arrow-right" aria-hidden="true"></i>
