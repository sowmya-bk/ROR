%nav.navbar.navbar-expand-lg.navbar.bg-light
  = link_to 'App',root_path, class:"navbar-brand"
  %ul.navbar-nav.mr-auto
    - if user_signed_in?
      %li.nav-item.dropdown-center
      %a{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}=image_tag current_user.image.url,class:'img' 
      %ul.dropdown-menu.dropdown-menu-end
        %li.dropdown-item
          = link_to 'Sign Out',destroy_user_session_path, method: :delete
        %li.dropdown-item 
          = link_to 'Edit Profile',edit_user_registration_path
          
    - else
      %li.nav-item.nav-link
        = link_to 'Sign Up',new_user_registration_path
        %a.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}
        %ul.dropdown-menu
          %li.dropdown-item 1
          %li.dropdown-item 2
          %li.dropdown-item 3
      %li.nav-item
        = link_to 'Sign In',new_user_session_path
        %a.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}
        %ul.dropdown-menu
          %li.dropdown-item 4
          %li.dropdown-item 5
          %li.dropdown-item 6
