  ul{
    display:flex;
    align-items:center;
    justify-content:center;
    
  }
  li{
    margin:5px;
  }
  .table{
    border: 1px solid black;
  }
  .img{
    border-radius: 50%;
    height: 30px;
    width: 30px;
    position:absolute;
    right:20px;
    
  }
  .dm{
    position:absolute;
    right:30px;
    align-items:right;
  }
  
